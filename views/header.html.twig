{% block header %}

    {% if user['username'] is defined %}
        <div class="header">
            <div>Connected as {{ user['username'] }}</div>
            <div><a href="?action=files">Files</a></div>
            <div><a href="?action=upload">Upload</a></div>
            <div><a href="?action=logout">Logout</a></div>
        </div>
    {% else %}
        <div class="header">
            <div><a href="?action=register">Register</a></div>
            <div><a href="?action=login">Log in</a></div>
        </div>
    {% endif %}

{% endblock %}